{
    "kind": "page",
    "links": {
        "permalink": {{jsonify .Permalink}},
        "html": "{{.URL}}",
        "json": "{{.URL}}index.json"
    },
    "date": {
        "published": {{jsonify .Date}},
        "modified": {{jsonify .Lastmod}}
    },
    "title": {{jsonify .Title}},
    "slug": {{jsonify .Slug}},
    "markdown": {{jsonify .RawContent}},
    "summary": {{index (split .RawContent "<!--more-->") 0 | jsonify}},
    "site": {{partial "site.json" .}}
}
